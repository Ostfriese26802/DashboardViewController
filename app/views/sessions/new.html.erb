<% content_for :content do %>
    
    <div class="login">
      <h1>Login</h1>
      <%= form_tag '/login' do %>
      <%= label_tag :username%>
      <%= text_field_tag :username %>
      <%= label_tag :password%>
      <%= password_field_tag :password%>
        <p>
          <%= submit_tag "Login",  :class => "btn btn-primary btn-lg"%>
        </p>
      <%end%>
    </div>
   
<%end%>
  <%= render template: "layouts/application" %>
